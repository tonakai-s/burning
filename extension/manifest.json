{
  "manifest_version": 3,
  "name": "Button Listener Example",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Button Listener"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' ws://127.0.0.1:*; "
  },
  "background": {
    "scripts": ["popup.js"]
  },
  "permissions": []
}
